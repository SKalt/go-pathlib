{
  "go.lintTool": "golangci-lint-v2",
  "go.lintFlags": [
    "--path-mode=abs",
  ],
  "go.formatTool": "custom",
  "go.alternateTools": {
    "golangci-lint-v2": "${workspaceRoot}/bin/golangci-lint",
    "customFormatter": "${workspaceRoot}/bin/golangci-lint",
    "go": "${workspaceRoot}/bin/go",  },
  "go.formatFlags": [
    "fmt",
    "--stdin"
  ],
  "cSpell.words": [
    "devcontainers",
    "goimports",
    "golines",
    "itsmechlark",
    "libc",
    "pathlib",
    "skalt",
    "stdlib"
  ],
  "[go]": {
    "editor.formatOnSave": true
  },
}
